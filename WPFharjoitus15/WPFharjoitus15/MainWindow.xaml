<Window x:Class="Ajoneuvolaskuri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajoneuvolaskuri" Height="450" Width="450">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Henkilöautot: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtHenkiloautot" IsReadOnly="True" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Kuorma-autot: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtKuormaautot" IsReadOnly="True" Width="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Name="btnHenkiloauto" Content="Henkilöauto" Click="btnHenkiloauto_Click" Width="100" Margin="0,0,10,0"/>
            <Button Name="btnKuormaauto" Content="Kuorma-auto" Click="btnKuormaauto_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
