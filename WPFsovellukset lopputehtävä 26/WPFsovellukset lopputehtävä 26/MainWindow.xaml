<Window x:Class="Varastonhallinta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Varastonhallinta" Height="350" Width="525">
    <Grid>
        <Label Content="Tuote:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TuoteNimiTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="60,10,0,0"/>
        <Label Content="Määrä:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,10,0,0"/>
        <TextBox x:Name="TuoteMaaraTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="240,10,0,0"/>

        <Button x:Name="LisaaTuoteButton" Content="Lisää Tuote" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,40,0,0" Click="LisaaTuote_Click"/>
        <Button x:Name="PoistaTuoteButton" Content="Poista Tuote" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,40,0,0" Click="PoistaTuote_Click"/>

        <ListBox x:Name="TuoteListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="150" Margin="10,80,0,0"/>
    </Grid>
</Window>
